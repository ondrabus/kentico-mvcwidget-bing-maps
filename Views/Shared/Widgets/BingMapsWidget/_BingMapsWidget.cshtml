
@model KenticoCommunity.BingMapsWidget.BingMapsWidgetViewModel
<div id="bingMap" style="width: 100%; height: 250px;"></div>

<script type="text/javascript">
    function loadMap() {
        var map = new Microsoft.Maps.Map(document.getElementById("bingMap"), {
            center: new Microsoft.Maps.Location(@Model.Latitude, @Model.Longitude),
            zoom: @Model.ZoomInitial
        });
        var pin = new Microsoft.Maps.Pushpin(map.getCenter(), null);
        map.entities.push(pin);
    }
</script>
<script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?key=@Model.ApiKey&callback=loadMap' async defer></script>